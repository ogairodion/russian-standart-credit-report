include menu-data.pug
.menu
    each menu_item in menu
        .menu__item(class=menu_item.class)
            .menu__item-content
                .menu__item-icon
                    +svgMono(menu_item.i—Åon)
                a.menu__item-text(href=menu_item.href)= menu_item.text
                .menu__item-arrow
                    +svgMono('arrow-dropdown')
            - if (menu_item.submenu)
                .menu__submenu
                    each submenu_item in menu_item.submenu
                        a.menu__submenu-item(href=submenu_item.href class=submenu_item.class)= submenu_item.text